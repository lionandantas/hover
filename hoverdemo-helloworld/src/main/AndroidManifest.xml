<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.codecanon.hover.hoverdemo.helloworld"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity android:name="io.mattcarroll.hover.hoverdemo.helloworld.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.SingleSectionHoverMenuService" />
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.MultipleSectionsHoverMenuService" />
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.SingleSectionNotificationHoverMenuService"/>
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.MutatingSectionsHoverMenuService" />
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.ReorderingHoverMenuService" />
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.AllStatesHoverMenuService"/>
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.ChangingMenusHoverMenuService"/>
        <service android:name="io.mattcarroll.hover.hoverdemo.helloworld.MenuThenNoMenuHoverMenuService"/>
    </application>

</manifest>