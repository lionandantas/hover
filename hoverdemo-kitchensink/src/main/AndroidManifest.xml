<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.mattcarroll.hover.hoverdemo.kitchensink" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="io.mattcarroll.hover.hoverdemo.kitchensink.App"
        >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.mattcarroll.hover.hoverdemo.kitchensink.DemoHoverMenuActivity"/>
        <service android:name="io.mattcarroll.hover.hoverdemo.kitchensink.DemoHoverMenuService" />
    </application>

</manifest>
